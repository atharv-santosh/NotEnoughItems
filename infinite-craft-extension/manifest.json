{
  "manifest_version": 3,
  "name": "NotEnoughItems",
  "short_name": "NEI",
  "version": "1.0",
  "description": "Automate Infinite Craft with DOM access and UI automation.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://neal.fun/infinite-craft/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "NotEnoughItems",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://neal.fun/infinite-craft/*"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
